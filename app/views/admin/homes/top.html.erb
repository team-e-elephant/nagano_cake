<h1>注文履歴一覧</h1>
<table class='table'>
  <thead class='thead-light'>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to admin_order_path(order) do %>
        <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %>
      </td>
      <td><%= order.name %></td>
      <% @sum = 0 %>
      <td>
        <% order.order_details.each do |order_detail| %>
        <% @sum += (order_detail.amount) %>
        <% end %>
        <%= @sum %>
      </td>
      <td><%= order.status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
</table>
