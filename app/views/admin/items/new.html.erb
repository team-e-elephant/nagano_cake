<diV class="container admin-item-new">

  <h1 class="title">商品新規登録</h1>
<!--商品画像選択 -->
<%= form_with model: [ :admin, @item ], local: true do |f| %>

 <div>
    <%= attachment_image_tag @item, :image, class: "img-square", size:"300x300" %>
    <%= f.attachment_field :image, placeholder: "商品画像" %><br>
 </div>
</div>

<!--商品登録 -->


  <div class="row">
    
    <div class="field">
      <label ="name">商品名</label>
      <%= f.text_field :name %>
    </div>
    
    <div class="field">
      <label class="introduction">商品説明</label>
      <%= f.text_area :introduction %>
    </div>
    
    <div class="field">
      <label class="genre">ジャンル</label>
      <%= f.collection_select :genre_id, @genres, :id, :name %>
    </div>
    
    <div class="field">
      <label class="price">税抜き価格</label>
      <%= f.text_field :price %>
    </div>
    
    <div class="field">
      <label class="is_active">販売ステータス</label>
     <%= f.select :is_active, [["販売中","true"],["売り切れ","false"]], :prompt=>"選択してください" %>
    </div>
    
  <!-- 投稿機能　-->
    <div class="sbmit">
      <%= f.submit "投稿" %>
    </div>
   </div>
<% end %>
</dvi>