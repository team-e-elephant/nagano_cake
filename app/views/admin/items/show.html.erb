<div class="container admin-item-show">
	
	<h1 class="title">商品詳細</h1>
	<div class="row">
		<div class="image">
		<%= attachment_image_tag @item, :image, :fill, 300, 300 %>
		</div>
		
		<div class="item_intorodction">
			<p class="name">商品名:<%= @item.name %></p>
             <!--商品説明のデータを取得-->
			<p class="introduction">
				商品説明:
				<%= @item.introduction %>
			</p>
			<p class="genre">
				ジャンル:
				<%= @item.genre.name %>
			</p>
			<p class="price">
				税抜き価格（税込価格):
				<%= @item.price %>円<%= (@item.price*1.1).floor %>円 
			</p>
			<p class ="is_active">販売ステータス:</p>
				<% if @item.is_active %>
				<p>販売中</p>
				<% else %>
				<p>売り切れ</p>
				<% end %>
		</div>
		<div class="edit-btn">
		<%= link_to '編集する', edit_admin_item_path(@item), class:"btn btn-outline-primary" %>
		</div>
	</div>
</div>