<div class="container">
  <div class="row">
    <h4 class="mb-5 bg-light">ジャンル編集</h4>
  </div>
  <%= form_with model: [ :admin, @genre ], local: true do |f| %>
    <div class="row">
      <div class="col-md-5">
    		<table class='table table-borderless'>
          <tr>
            <th>ジャンル名</th>
            <td>
              <%= f.text_field :name %>
            </td>
            <td>
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
</div>