<div class='container'>
  <div class='row'>
    <div class='bg-light'><h4 class='ml-3 mb-3'><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4></div>
  </div>
  <div class="row">
    <div class='col-md-10 col-md-offset-1'>
      <table class='table table-borderless'>
        <tr>
          <td>会員id</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td> <%= @customer.last_name %>  <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><% if @customer.is_deleted == false %>
              有効
              <% else %>
              退会
              <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-success' %>
      <%= link_to "注文履歴一覧を見る", admin_root_path(@customer.id), class: 'btn btn-primary' %>
    </div>
  </div>
</div>