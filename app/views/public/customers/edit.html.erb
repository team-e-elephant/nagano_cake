<div class="container">

    <div class="row">
        <h3 class="ml-5 mb-5 bg-light">会員情報編集</h3>
    </div>

    <%= form_with model: @customer, url: customer_path(@customer), local: true do |f| %>
    <div class="row">
        <p class="col-lg-2">氏名</p>
        <div class="field">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "rounded" %>
        </div>
        <div class="ml-5 field">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "rounded" %>
        </div>
    </div>

    <div class="row">
        <p class="col-lg-2">フリガナ</p>
        <div class="field">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "rounded" %>
        </div>
        <div class="ml-5 field">
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "rounded" %>
        </div>
    </div>

    <div class="row">
        <p class="col-lg-2">郵便番号</p>
        <div class="field">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "rounded" %>
        </div>
    </div>

    <div class="row">
        <p class="col-lg-2">住所</p>
        <div class="field">
            <%= f.text_field :address, :size=>"60", autofocus: true, autocomplete: "address", class: "rounded" %>
        </div>
    </div>

    <div class="row">
        <p class="col-lg-2">電話番号</p>
        <div class="field">
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "rounded" %>
        </div>
    </div>

    <div class="row">
        <p class="col-lg-2">メールアドレス</p>
        <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded" %>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <%= f.submit "編集内容を保存", class: "w-25 btn btn-success" %>
            <%= link_to '退会する', customers_unsubscribe_path, class: "ml-5 btn btn-danger" %>
        </div>
    </div>


    <% end %>
</div>