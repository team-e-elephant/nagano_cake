<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <%= form_with model:@item.cart_items, url: cart_items_path, method: :post, local:true do |f| %>
    		<table class='table'>
    		  <tbody>
      		  <tr>
              <td><%= attachment_image_tag(@item, :image, :fill, 100, 100, fallback: "img/no_image.jpg") %></td>
              <td><%= @item.name %></td>
              <td><%= @item.introduction %></td>
              <td>￥<%= (@item.price*1.1).floor %>（税込）</td>
            </tr>
            <tr>
              <% if customer_signed_in? %>
                <td>
                  <%= f.hidden_field :item_id, value: @item.id %>
                  <%= f.select :amount, options_for_select((1..20).to_a), include_blank: "個数選択" %>
                </td>
                <td><%= f.submit "カートに入れる" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>