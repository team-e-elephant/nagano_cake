<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
  		<table class='table'>
  		  <tr>
          <td><%= attachment_image_tag(@item, :image, :fill, 100, 100, fallback: "img/no_image.jpg") %></td>
          <td><%= @item.name %></td>
          <td><%= @item.introduction %></td>
          <td>￥<%= (@item.price*1.1).floor %>（税込）</td>
          <td><%= form_with model:@cart_item,local:true do |f| %>
                <%= f.hidden_field :item_id, value: @item.id %>
                <%= f.select :amount, options_for_select((1..20).to_a), include_blank: "個数選択" %>
                <%= f.submit "カートに入れる" %>
              <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>