<h4>注文履歴詳細</h4>
<h6>注文情報</h6>
<table>
  <thead>
    <td>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払い方法</th>
      <th>ステータス</th>
    </td>
  </thead>
  <tbody>
    <td>
      <tr><%= @order.created_at %></tr>
      <tr>〒<%= @order.postal_code %><%= @order.address %><%= @order.name %></tr>
      <tr><%= @order.payment_method %></tr>
      <tr><%= @order.status %></tr>
    </td>
  </tbody>
</table>

<h6>請求情報</h6>
<table>
  <thead>
    <td>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </td>
  </thead>
  <tbody>
    <td>
      <tr><%= @order.total_payment %></tr>
      <tr>800</tr>
      <tr><%= @order.total_payment+800 %></tr>
    </td>
  </tbody>
</table>

<h6>注文内容</h6>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order_detail.item.name %></td>
      <td><%= @order_detail.item.price %></td>
      <td><%= @order_detail.item.amount %></td>
      <td><%= @order_detail.item.price %>*<%= @order_detail.item.amount %></td>
      <td></td>
    </tr>
  </tbody>
</table>