<div class="container">
  <div class="row">
    <h3>注文情報確認</h3>
  </div>

  <div class="row">
    <table class="col">
      <tr class="table-secondary">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
      <tr>
      <!--each文入る-->
      <% @sum = 0 %>
	    <% @cart_items.each do |cart_item| %>
        <td>
          <!--画像と商品名-->
          <%= attachment_image_tag(cart_item.item, :image, :fill, 45, 45, fallback: "img/no_image.jpg") %><%= cart_item.item.name %>
        </td>

        <td>
         <%= (cart_item.item.price*1.1).floor %>
        </td>
        <td>
          <!--数量-->
          <%= cart_item.amount %>
        </td>
        <td>
          <!--小計-->
          <%= (cart_item.item.price*1.1*cart_item.amount).floor %>
        </td>
         <% @sum += (cart_item.item.price*1.1*cart_item.amount).floor %>
      <% end %>
      </tr>
    </table>

    <table class="col ml-5">
      <tr>
        <th class="table-secondary">送料</th>
        <td>800</td>
      </tr>
      <tr>
        <th class="table-secondary">商品合計</th>
        <td><%= @sum %></td>
      </tr>
      <tr>
        <th class="table-secondary">請求金額</th>
        <td>25,60</td>
      </tr>

    </table>
  </div>


  <div class="row">
    <table>
      <tr>
        <td>
          <strong>支払方法</strong>
        </td>
        <td><%= @order.payment_method %></td>
      </tr>

      <tr>
        <td>
          <strong>お届け先</strong>
        </td>
      <td><%= @order.address %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <p>注文を確定する</p>
  </div>


</div>